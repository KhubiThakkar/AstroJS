---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../posts/*.md");
const uniqueTags = [
	...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];
---

<BaseLayout pageTitle="Tags">
	<div class="tags">
		{
			uniqueTags.map((tag) => (
				<p class="tag">
					<a href={`/tags/${tag}`}>{tag}</a>
				</p>
			))
		}
	</div>
</BaseLayout>
<style>
	a {
		color: #353535;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		margin: 0 auto;
	}

	.tag {
		margin: 0.25em;
		border: dotted 1px #353535;
		border-radius: 0.5em;
		padding: 0.5em 1em;
		font-size: 1.15em;
		background-color: #bdbbb0;
	}
</style>
